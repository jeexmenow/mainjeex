import telebot
from set import keys, TOKEN
from exceptions import ConvertionException, CryptoConverter

bot = telebot.TeleBot(TOKEN)

#—Å—Ç–∞—Ä—Ç –∏ –ø–æ—è—Å–Ω–µ–Ω–∏–µ –¥–ª—è –≤–≤–æ–¥–∞
@bot.message_handler(commands=['start', 'help'])
def help(message: telebot.types.Message):
    text = '–ü—Ä–∏–≤–µ—Ç! ‚ò∫Ô∏è –î–ª—è –Ω–∞—á–∞–ª–∞ —Ä–∞–±–æ—Ç—ã –≤–≤–µ–¥–∏—Ç–µ –∫–æ–º–∞–Ω–¥—É –≤ —Å–ª–µ–¥—É—é—â–µ–º –≤–∏–¥–µ: \n<–∏–º—è –≤–∞–ª—é—Ç—ã (–µ–¥.—á)> \
<–≤–∞–ª—é—Ç–∞ –¥–ª—è –ø–µ—Ä–µ–≤–æ–¥–∞(–µ–¥.—á)> \
<–∫–æ–ª–∏—á–µ—Å—Ç–≤–æ –ø–µ—Ä–µ–≤–æ–¥–∏–º–æ–π –≤–∞–ª—é—Ç—ã>\n–¢–∞–∫–∂–µ –≤—ã –º–æ–∂–µ—Ç–µ —É–≤–∏–¥–µ—Ç—å —Å–ø–∏—Å–æ–∫ –≤—Å–µ—Ö –¥–æ—Å—Ç—É–ø–Ω—ã—Ö –≤–∞–ª—é—Ç üòâ: /values'
    bot.reply_to(message, text)

#—Å–ø–∏—Å–æ–∫ –¥–æ—Å—Ç—É–ø–Ω—ã—Ö –≤–∞–ª—é—Ç
@bot.message_handler(commands=['values'])
def values(message: telebot.types.Message):
    text = '–î–æ—Å—Ç—É–ø–Ω—ã–µ –≤–∞–ª—é—Ç—ã:'
    for key in keys.keys():
        text = '\n'.join((text, key, ))
    bot.reply_to(message, text)

#–æ—Ç–≤–µ—Ç—ã –ø—Ä–∏ –æ—à–∏–±–∫–µ –≤–≤–æ–¥–∞
@bot.message_handler(content_types=['text', ])
def convert(message: telebot.types.Message):
    try:
        values = message.text.split(' ')

        if len(values) != 3:
            raise ConvertionException('–°–ª–∏—à–∫–æ–º –º–Ω–æ–≥–æ –ø–∞—Ä–∞–º–µ—Ç—Ä–æ–≤ üòï')

        quote, base, amount = values
        total_base = CryptoConverter.convert(quote, base, amount)
    except ConvertionException as e:
        bot.reply_to(message, f'–û—à–∏–±–∫–∞ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è üòï\n{e}')
    except Exception as e:
        bot.reply_to(message, f'–ù–µ —É–¥–∞–ª–æ—Å—å –æ–±—Ä–∞–±–æ—Ç–∞—Ç—å –∫–æ–º–∞–Ω–¥—É üòî\n{e}')
    else:
        text = f'–¶–µ–Ω–∞ {amount} {quote} –≤ {base} - {total_base}'
        bot.send_message(message.chat.id, text)

bot.polling(none_stop=True)
